.wrapper-main
  = render 'shared/messaging'
  
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %h2 Sign In
    %p
      = f.label :email
      %br/
      = f.text_field :email
    %p
      = f.label :password
      %br/
      = f.password_field :password
    .clearing
    - if devise_mapping.rememberable?
      %p
        = f.check_box :remember_me
        = f.label :remember_me
    %p= f.submit "Sign in"      
    - if devise_mapping.recoverable? && controller_name != 'passwords'
      %p= link_to "Forgot your password?", new_password_path(resource_name), :class=>'action_link'         if session['user.email_for_password_recovery'].blank?
      %p= link_to "Forgot your password?", password_path(resource_name, resource_name => {:email => session['user.email_for_password_recovery']}),  :method => :post, :class=>'action_link' unless session['user.email_for_password_recovery'].blank?
      %p= link_to image_tag('sign-in-facebook.gif', :alt => "Connect with Facebook"), omniauth_authorize_path(:user, 'facebook')
      %p= link_to image_tag('sign-in-with-twitter-d.png', :alt => "Sign in with Twitter"), omniauth_authorize_path(:user, 'twitter')
