- content_for(:header) do
  = link_to image_tag('ourkudos_header_logo.png', :id => 'header-logo'), '/'
  = image_tag('header_motto_splash.png', :id => 'header-motto-splash')
  = link_to image_tag('sign_in_button.png', :id => 'sign-in-button'), new_user_session_path

- content_for(:main) do
  #main_top
  #main
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %h2 Sign In
      %p
        = f.label :email
        %br/
        = f.text_field :email
      %p
        = f.label :password
        %br/
        = f.password_field :password
      - if devise_mapping.rememberable?
        %p
          = f.check_box :remember_me
          = f.label :remember_me
      %p= f.submit "Sign in"      
      - if devise_mapping.recoverable? && controller_name != 'passwords'
        %p= link_to "Forgot your password?", new_password_path(resource_name), :class=>'action_link'
        %p= link_to image_tag('sign-in-facebook.gif'), omniauth_authorize_path(:user, 'facebook')
        %p= link_to image_tag('sign-in-with-twitter-d.png'), omniauth_authorize_path(:user, 'twitter')
   
    #footer
      = render 'shared/footer'
