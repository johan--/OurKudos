var popup_html  = '<%= escape_javascript render :partial => "kudo_flag_popup" %>';
var popup_box   = $("div.popup_placeholder#flag_popup_placeholder_<%= @kudo.id %>");


popup_box.html(popup_html).dialog({title: '<%= t(:kf_help_understand_message) %>', width: 446, modal: true, resizable: false, buttons: [{ text: "Flag this Kudo!", click: function(){$("form#new_kudo_flag").submit();}, class: 'action_button' },{ text: "Cancel", click: function(){$(this).dialog("close");}, class: 'cancel_link' } ]  });

$('div.ui-dialog').prepend('<div id="dialog-kudos-character" class="flagman"></div>');