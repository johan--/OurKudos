<% if @kudo.valid? %>
    $('div#kudo_message_id_<%= @kudo.id %>').remove();
    $("div.popup_placeholder#flag_popup_placeholder_<%= @kudo.id %>").dialog("close");

    $('p.notice').remove(); // clears out any existing non-ajax notices

    $('div#error_container').html('<%= escape_javascript render :partial => "message", :locals => {:message => @kudo_flag.ui_message } %>');

    // scroll to element to show a message, no need to bother jquery :-)
    document.getElementById('error_container').scrollIntoView(true);


<% end %>