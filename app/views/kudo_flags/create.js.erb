<% if @kudo.valid? %>
    $('div#kudo_message_id_<%= @kudo.id %>').remove();
    var popup_box   = $("div.popup_placeholder#flag_popup_placeholder_<%= @kudo.id %>");
    popup_box.html("<%= escape_javascript(render :partial => "message", :locals => {:message => @kudo_flag.ui_message }) %>");

    setTimeout(function(){
        popup_box.dialog('close');
    },4000);

<% end %>