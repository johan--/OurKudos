#kudo_dashboard_cont
  #kudo_dashboard_top{:class => kudos_current_class_for_tab }
    %ul#nav_kudo_dashboard
      %li
        %h2= link_to 'Sent',     home_path(:kudos =>'sent'),      :class => kudos_current_class_for_link('sent')
      %li
        %h2= link_to 'Received', home_path(:kudos => "received"), :class => kudos_current_class_for_link('received')
      %li
        %h2= link_to 'Others',   home_path(:kudos => "received"), :class => kudos_current_class_for_link('others')
  #kudo_dashboard_mid
    #kudo_dashboard_search_cont
      = form_tag do
        %p#kudos_sortby_cont
          = label_tag(:sortby,'Sort by')
          %br/
          = select_tag(:sortby)
        %p#kudos_search_cont
          = text_field_tag(:searchterms,'',:placeholder=>'search')
        .clearing
    - for kudo in @kudos
      - if params[:kudos] == "sent"      || params[:kudos].blank?
        = render :partial => "kudos/sent_kudo",     :locals => {:kudo => kudo}

      - if params[:kudos] == "received"  && !params[:kudos].blank?
        = render :partial => "kudos/received_kudo", :locals => {:kudo => kudo} if kudo.visible_for?(current_user)

    
  #kudo_dashboard_bot