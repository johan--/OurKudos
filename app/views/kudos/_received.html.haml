= paginate @kudos
#recent_kudos_cont_top
  %h3 Recent Kudos
  #recent_kudos_cont
    - for kudo in @kudos do
      .kudo_message_cont
        = image_tag('avatar_unknown.png', :class=>'avatar')
        .kudo_message_bubble_cont
          .kudo_message_top
          .kudo_message_mid
            %p
              %span.sender= kudo.author.to_s
              %span.greater_than >
              %span.receiver
                = kudo.recipient.to_s
                %small= link_to(t(:remove_this_kudo), kudo_path(kudo), :method => :delete, :confirm => I18n.t(:are_you_sure_you_want_to_delete))
            = simple_format(kudo.body)
          .kudo_message_bot
        .clearing

  #recent_kudos_cont_bot
.clearing
= paginate @kudos