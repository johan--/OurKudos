.kudo_message_cont
  = image_tag(kudo.author.current_profile_picture, :class=>'avatar')
  .kudo_message_bubble_cont
    .kudo_message_top
    .kudo_message_mid
      %p
        %span.sender= kudo.author.to_s
        %span.greater_than >
        %span.receiver= kudo.recipients_readable_list
      %p= kudo.body
    .kudo_message_bot
  .clearing