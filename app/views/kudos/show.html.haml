.wrapper-main
  .kudo_message_cont
    - if @kudo.author
      = profile_picture_for(@kudo.author)
    - else
      = anon_picture
    .kudo_message_bubble_cont
      .kudo_message_top
      .kudo_message_mid{"data-id" => @kudo.id, "data-scope" => @kudo.share_scope }
        %p
          %h1.hidden_heading= @kudo.body
          %span.sender= @kudo.author.to_s
          %span.greater_than >
          %span.receiver= @kudo.recipients_readable_list
        %p= @kudo.body
        .social_buttons
          %div{:id => "google_plus_#{@kudo.id}", :class => "plusone_button"}
          %div{:id => "facebook_like_#{@kudo.id}", :class => "facebook_like"}
        .clearing

      .kudo_message_bot
    .clearing

  = unless current_user
    %p= image_tag('kudos_hugging.png')
    %p= link_to image_tag('join_now_button.png', :alt=>"Join Ourkudos now!"), new_user_registration_path unless sign_up_disabled?
