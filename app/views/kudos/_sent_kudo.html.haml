.kudo_message_cont
 = image_tag('avatar_unknown.png', :class=>'avatar')
 .kudo_message_bubble_cont
  .kudo_message_top
  .kudo_message_mid
   .kudo_message_text_cont
    %p
     %span.category= kudo.category
     %span.sender= kudo.author.to_s
     %span.greater_than &gt;
     %span.receiver
      = kudo.recipients_readable_list
    %p= kudo.body
   .kudo_flag_cont.kf_dimmed
   -if kudo.can_be_deleted_by? current_user
    %span= link_to(content_tag(:span,'x'), destroy_sent_user_kudo_path(current_user, kudo),
                                :method => :delete, :confirm => I18n.t(:are_you_sure), :class => "delete_kudo_btn")
   .clearing
  .kudo_message_bot
 .clearing