.wrapper-main	
  = form_for(resource, :as => resource_name, :html => { :honeypot => true },
                                             :url => registration_path(resource_name)) do |f|
    %h2 Create a new OurKudos Account
    = error_messages_for @user
  
    = render :partial => "form_fields", :locals => {:f => f}
    = hidden_field_tag :autofill, params[:autofill]
    
    = label_tag :terms_of_service
    %br/
    = text_area_tag :terms_of_service, strip_tags(@terms_of_service) ,:size => '100x12', :disabled => true
    
    %p
      = f.check_box :tos
      = label_tag :terms_of_service_check, "I've read and agree to the Terms of Service"
    
    %p= f.submit "Sign up"
    %p -OR-
    %p= link_to image_tag('sign-up-with-facebook-btn.png'), omniauth_authorize_path(:user, 'facebook')

