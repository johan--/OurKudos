= form_for @page, :url => @page.new_record? ? admin_pages_path : admin_page_path(@page) do |f|

  = error_messages_for @page

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :slug
    = f.select :slug, Page.slugs_for_select
  .field
    = f.label :locale
    = f.select :locale, [["en", "en"], ["pl", "pl"]]
  .field
    = f.label :body
    = f.text_area :body, :cols => 80
  .actions
    = f.submit 'Save'