%h4 Please note that any changes below will be applied with next deployment

#social_sharing_enabled
  = form_for @social_sharing_enabled, :url => admin_setting_path(@social_sharing_enabled), :method => :put do |f|
    %p
      = label_tag "settings-social-sharing-enabled", "Social Sharing Enabled"
      = radio_button_tag "settings[value]", "no", (@social_sharing_enabled.value == "no" || @social_sharing_enabled.value.blank?)
      No
      = radio_button_tag "settings[value]", "yes", @social_sharing_enabled.value == "yes"
      Yes

    %p= f.submit "Save", :div => false

#sign_up_disabled
  = form_for @sign_up_disabled, :url => admin_setting_path(:id => @sign_up_disabled), :method => :put do |f|
    %p
      = label_tag "settings-sign-up-disabled", "Sign up Disabled"
      = radio_button_tag "settings[value]", "no", (@sign_up_disabled.value == "no" || @sign_up_disabled.value.blank?)
      No
      = radio_button_tag "settings[value]", "yes", @sign_up_disabled.value == "yes"
      Yes

    %p= f.submit "Save", :div => false

#test_environment_special_message
  = form_for @special_message, :url => admin_setting_path(:id => @special_message), :method => :put do |f|
    %p
      = label_tag "settings-special-message", "Test environment special message (only used when sign up disabled)"
    %p= text_area_tag "settings[value]", @special_message.value, :size => "120x30"

    %p= f.submit "Save", :div => false


