%fieldset
  %legend= t(:user_authentications)

  - if @authentications.any?
  
    %ul.admin_list
      - for provider in @authentications do 
        %li
          = provider.provider
          = link_to t(:remove), admin_user_authentication_path(@user, provider), :method => :delete, :confirm => I18n.t(:are_you_sure)
          = link_to 'Edit', edit_admin_user_authentication_path(@user, provider)
          

  = link_to t(:add_new_provider), new_admin_user_authentication_path(@user), :class => "action_link" if @user.my_options_for_providers.any?
  