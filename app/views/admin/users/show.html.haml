%h3= t(:showing_user) + ' ' + @user.email


%fieldset
  %legend= t(:statistics)
  
  %p.user-data
    = t(:user_sign_in_count)
    = @user.sign_in_count
  
  %p.user-data
    = t(:user_member_since)
    = @user.created_at.strftime("%m/%d/%Y")

  %p.user-data
    = t(:user_last_sign_in_at)
    = @user.last_sign_in_at.strftime("%m/%d/%Y") rescue t(:never)
  
  %p.user-data
    = t(:user_last_ip)
    = @user.last_sign_in_ip

= render :partial => "admin/users/user_authentications" if @authentications.any?        
= render :partial => "admin/users/user_demographics"   


= link_to t(:back_to_users_listing), admin_users_path