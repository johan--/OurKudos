%h3= t :add_new_site

= form_for @site, :url => admin_sites_path do |f|
  
  = error_messages_for @site
  
  %p.field
    = f.label :site_name
    %br/
    = f.text_field :site_name
    
  %p.field
    = f.label :url
    %br/
    = f.select :protocol, options_for_select(Site.options_for_protocol)
    = f.text_field :url
    
  %p.field
    = f.label :description
    %br/
    = f.text_area :description, {:size => "48x4"}
  
  %p.field
    = f.submit t :add_new_site
      
    
    %small= t :new_api_key_will_be_automatically_generated