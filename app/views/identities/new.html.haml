#header
  = render 'shared/registered_header'

#main_top
#main
  .wrapper-main
    
    
    = form_for @identity, :url => user_identities_path(current_user) do |f|
      %h2= t :add_new_identity
      = error_messages_for @identity
      
      = render :partial => 'identities/form_fields', :locals => {:f => f }
      
      = f.submit t(:add_new_identity)
    
    = link_to t(:back_to_my_account_settings), user_path(current_user)
  
  #footer
    = render 'shared/footer'