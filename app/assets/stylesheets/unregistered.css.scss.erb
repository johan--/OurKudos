@import "variables_and_mixins";


#mainarea {
	width: $site_width_main;
	margin: 0 auto;
}

#header {
	width: $site_width_main;
	height: 160px;
	height: 152px;
	position: relative;
}

#header-logo {
	position: relative;
}

#header-motto-splash {
	position: absolute;
	right: 12px;
	z-index: 100;
}

#sign-in-button {
	position: absolute;
	top: 0;
	right: -10px;
	z-index: 101;
}

#main_top {
	width: 1014px;
	height: 27px;
	margin: 0 auto;
	background: url(<%= asset_path 'main_top_bg.png' %>) no-repeat left top;
}

#main {
	width: 1014px;
	margin: 0 auto;
	background: url(<%= asset_path 'main_bg.png' %>) repeat-y left top;
}


#col_left, #col_right {
	float: left;
}

#col_left {
	width: 320px;
	position: relative;
	background: url(<%= asset_path 'col_left_bg.png' %>) no-repeat -4px 22px;
	padding-top: 160px;
	padding-left: 20px;
	text-align: center;
}

img#new-to-ok-arrow {
	position: absolute;
	top: -45px;
	left: 56px;
}

#col_right {
	width: 640px;
	padding-top: 8px;
}

#recent_kudos_cont {
	width: 604px;
	background: url(<%= asset_path 'recent_kudos_cont_bg.png' %>) repeat-y left top;
	padding: 20px;
}

#recent_kudos_cont_top {
	width: 627px;
	height: 33px;
	background: url(<%= asset_path 'recent_kudos_cont_top_bg.png' %>) no-repeat left top;
	padding-top: 10px;
	padding-left: 17px;
}

#recent_kudos_cont_bot {
	width: 644px;
	height: 14px;
	background: url(<%= asset_path 'recent_kudos_cont_bot_bg.png' %>) no-repeat left top;
	margin-bottom: 20px;
}

/* forms */



#sign_in_submit_btn, #new_registration_submit_btn {
	border: 0;
	outline: 0;
	background: none;
	padding: 0;
	margin: -5px 0 20px -3px;
	cursor: pointer;
}

#email_warning_message {
	color: red;
	font-weight: bold;
	font-size: 1.3em;
	width: 550px;
	float: left;
	margin: 3px 0 0 5px;
}

input#user_email {
	float: left;
}


/* end forms */


/* kudos messaging related */

#recent_kudos_cont {
  /* unregistered homepage recent kudos listing */
  div.kudo_message_bubble_cont {
	  width: 440px;
	  margin-bottom: 10px;
  }
  
}

/* end kudos messaging */

/* Invite styles */

#youve_got_kudos_cont {
	width: 944px;
	margin: 0 auto;
	padding-top: 15px;
	padding-bottom: 40px;
	margin-bottom: 30px;
	
	p.kudo_body_text {
	  width: auto;
	  float: none;
  }
	
	div.kudo_message_bubble_cont {
		width: 480px;
		margin-bottom: 10px;
	}
	
	h1, h2, h3, h4 {
	  font-family: "Puritan", Verdana, Helvetica, sans-serif;
	}
	
	h1 {
		font-size: 1.9em;
		font-weight: bold;
		color: #000;
		margin: 20px 0 20px 135px;
		
		span.reddened {
			color: #c22328;
			font-style: italic;
		}
	}
	
	h2 {
		font-size: 3.4em;
		color: #0a6398;
		text-align: center;
		
		strong {
		  font-weight: bold;
		}
	}
	
	h3 {
		font-size: 1.7em;
		color: #679ab8;
		text-align: left;
	}
	
	.kudo_message_cont {
	  margin: 0 auto;
	  width: 650px;
  }

  textarea {
  	width: 470px;
  	height: 60px;
  	border: 0;
  	outline: 0;
  }
  
  p#invite_send_now {
    text-align: right;
    cursor: pointer;
    margin-bottom: 0;
  }
  
  .dotted_divider {
  	padding-top: 15px;
  	margin-bottom: 10px;
  }
  
  #video_section {
  	background: url(<%= asset_path '8pxroundeddot.png' %>) left bottom repeat-x;
  	padding-bottom: 10px;
  	margin-bottom: 40px;
  	
  	img {
  	  vertical-align: middle;
  	}
  }
  
  #one_two_three_cont {
    margin: 0 0 0 85px;
    
    p {
    	font: normal 1.3em "Puritan", Verdana, Helvetica, sans-serif;
    }
    
    h2 {
    	text-align: left;
    	margin-bottom: 6px;
    }
    
    h4 {
      font-size: 2.6em;
      color: #0a6398;
      margin-bottom: 10px;
    }
    
    img {
  	  vertical-align: middle;
  	}
  
    div.col_left {
    	width: 300px;
    	float: left;
    	padding-top: 20px;
    }
    
    div.col_mid {
    	width: 336px;
    	float: left;
    	padding-top: 20px;
    }
    
    div.col_right {
      width: 177px;
      float: left;
      padding-top: 20px;
    }
  
  }
  
}


#youve_got_kudos_top {
	width: 944px;
	height: 29px;
	background: url(<%= asset_path 'container944_top.png' %>) left top no-repeat;
	position: relative;
}

#youve_got_kudos_banner_cont {
	width: 336px;
	height: 67px;
	position: absolute;
	top: -45px;
	left: 320px;
	z-index: 100;
}

#youve_got_kudos_mid {
	width: 904px;
	padding: 0 20px;
	background: url(<%= asset_path 'container944_mid.png' %>) left top repeat-y;
}

#youve_got_kudos_bot {
	width: 944px;
	height: 33px;
	background: url(<%= asset_path 'container944_bot.png' %>) left bottom no-repeat;
}

#kudo_sender_cont {
	text-align: center;
	float: left;
	width: 10em;
	overflow: hidden;

	p {
	  font: bold 1.2em Verdana, Arial, Helvetica, sans-serif;
	  color: #000;
	  text-align: center;
	}
	
	img {
		float: none;
	}

}


.dotted_divider {
	background: url(<%= asset_path '8pxroundeddot.png' %>) left bottom repeat-x;
	height: 8px;
}

span.blue_accent {
	color: #5591b4;
}

#invite_col_left, #invite_col_right {
	float: left;
	width: 452px;
	
	h2 {
		font: normal 2.4em "NunitoRegular", Arial, Helvetica, sans-serif;
		color: $headers_blue;
		text-align: left;
	}
}


p.kudo_body_text {
	width: 440px;
	float: left;
	font-size: 1.2em;
}

.social_buttons {
  width: 110px;
  margin-left: 10px;
  margin-top: 0px;
  height: 20px;
  float: right;
  
  a {
    text-decoration: none;
    float: left;
  }
}
.plusone_button {
  width: 50%;
  float: left;
}
.facebook_like {
  width: 50%;
  float: right;
}
.fb_like {
  width: 57px;
  float: right;
}
.fb_like iframe {
  width:51px!important;
  overflow: hidden;
  height: 27px!important;
}
.hidden_heading {
  display: none;
}
.spacer {
  height: 30px;
}
