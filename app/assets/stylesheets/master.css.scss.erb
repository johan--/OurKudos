  	padding: 12px 20px;
  	background-color: $very_very_light_blue;
  	margin-bottom: 20px;
  	
  	@include rounded-edges(15px);
  	-moz-box-shadow: 0px 0px 10px #ddd;
  	-webkit-box-shadow: 0px 0px 10px #ddd;
  	box-shadow: 0px 0px 10px #ddd;
  }
  
  #profile_avatar {
  	float: left;
  	margin-right: 20px;
  }
  
  .kudo_message_bubble_cont {
  	width: 740px;
  }
  
  p.kudo_body_text {
  	width: auto;
  }

}
/* end member profile page */

