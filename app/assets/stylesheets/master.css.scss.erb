/* CSS Master Stylesheet: Included on every site page, all sections */

@import "variables_and_mixins";

/* Begin CSS Reset */
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
	display: block;
}
body {
	line-height: 1;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}

/* End CSS Reset */

body {
	font-size: 65%;
	font-family: arial;
	background: url(<%= asset_path 'body_bg.jpg' %>) repeat-x left top;
	line-height: 1;
}

.clearing {
	clear: both;
}

.action_link {
	font: 1.2em "Lucida Sans Unicode", "Lucida Grande", sans-serif;
	color: $warning_red;
}

.wrapper-main {
	padding: 0 30px;
}

.border1 {
	border-bottom: 2px dotted $light_gray;
}

img.avatar {
	border: 3px solid #fff;
	width: 52px;
	height: 52px;
	overflow: hidden;
	-moz-box-shadow: 0 0 5px 2px #ccc;
	-webkit-box-shadow: 0 0 5px 2px #ccc;
	box-shadow: 0 0 5px 2px #ccc;
}

p {
	margin-bottom: 10px;
}

h1 {
	font: normal 4em "NunitoRegular", Arial, Helvetica, sans-serif;
	color: $headers_blue;
	margin-bottom: 10px;
}

h2 {
	color: $headers_blue;
	font: normal 1.7em "NunitoRegular", Arial, sans-serif;
	margin-bottom: 10px;
}

/* error and alert messages - html-only presentation */

.notice, .alert, #error_explanation {
	padding: 10px 15px;
	margin: 0 0 10px 0;
	background-color: #fff;
	font: bold 1.3em "Puritan", "Lucida Sans Unicode", "Lucida Grande", sans-serif;
	@include rounded-edges(10px);
	
}

.notice {
	color: green;
	border: 4px solid green;
}

.alert, #error_explanation {
	color: red;
	border: 4px solid $warning_red;
}

.inline_error {
 color: red;
 font-weight: bold;
}

#error_explanation {
	line-height: 1.8em;
}

/* footer */
	
#footer {
	background: url(<%= asset_path 'footer_bg.gif' %>) repeat-x left top;
	border: 3px solid #fff;
	border-bottom: none;
	border-top-left-radius: 15px;
	border-top-right-radius: 15px;
	margin: 30px 40px 0 40px;
	-moz-box-shadow: 0px -2px 7px #ddd;
	-webkit-box-shadow: 0px -2px 7px #ddd;
	box-shadow: 0px -2px 7px #ddd;
	padding: 16px 0;
	clear: both;
}

ul#nav_footer {
	list-style: none;
	margin-left: 80px;
	display: inline;
}

ul#nav_footer img {
	vertical-align: middle;
}

ul#nav_footer li {
	display: inline;
	padding: 0 10px;
	font: normal 1.3em Verdana, Arial, sans-serif;
	color: #508bac;

}

ul#nav_footer li a {
	color: #508bac;
	text-decoration: none;
}

span#footer_copyright {
	font: 1.0em Verdana, Arial, Helvetica, sans-serif;
	color: #508bac;

}

/* Kudos messaging presentation */
/* Some rules here that apply to both unregistered homepage, registered homepage and You've got Kudos! page */
/* Further rules customizing same DOM elements in registered.css, unregistered.css. Primarily this is due to
	differences in width of the containing bubble graphic. */

div.kudo_message_cont {
	clear: both;
	margin-bottom: 8px;
}

div.kudo_message_bubble_cont {
	border-radius: 15px;
	border: 1px solid #ebecee;
	background-color: #fff;
	padding: 15px;
	box-shadow: 2px 4px 6px #ebecee;
	float: right;
}

div.kudo_message_bubble_nipple {
	width: 19px;
	height: 28px;
	background: url(<%= asset_path 'kb_nipple_bg.png' %>) no-repeat left top;
	margin-left: -34px;
	margin-top: 8px;
	float: left;
}

div.avatar_cont {
	width: 100px;
	text-align: center;
	float: left;
	padding-top: 10px;
}

.sender, span.receiver {
	font: bold 1.2em Verdana, Arial, Helvetica, sans-serif;
}

.sender, .sender a {
	color: #c60;
}

.sender a {
 text-decoration: none;
}

span.receiver {
	color: #690;
}

span.receiver a {
	color: #690;
  text-decoration: none;
}

span.greater_than {
	color: $very_light_gray;
}


/* tables */

table.type1 {
	width: 100%;
	background-color: #fff;
	margin-bottom: 10px;
	
	th {
		padding: 8px 0;
		font: 1.1em "Lucida Sans Unicode", "Lucida Grande", verdana, helvetica, sans-serif;
		background-color: $very_light_gray;
		
		a {
			color: $very_dark_gray;
		}
		
	}
	
	td {
		font: 1.2em "Andale Mono", "Lucida Sans Unicode", "Lucida Grande", monospace;
		padding: 8px 0 8px 10px;
		border-bottom: 1px dotted $very_light_gray;
	}	
	
}

/* lists */

ul.type2 {
	list-style: none;
	
	li {
		font: 1.2em "Andale Mono", "Lucida Sans Unicode", "Lucida Grande", monospace;
		width: 40em;
		border-bottom: 1px dotted $very_light_gray;
		padding: 5px 5px;
		
		a {
		  padding-left: 5px;
			float: right;
		}	
	}
}

/* forms */

label {
	font: bold 1.1em Arial, Helvetica, sans-serif;
	padding-left: 3px;
}

input[type=text], input[type=password] {
	font: 1.4em "Lucida Sans Unicode", "Lucida Grande", sans-serif;
	background-color: #e1f0be;
	border: 2px solid #fff;
	padding: 4px 7px;
	@include rounded-edges(5px);
}

/* end forms */

/* member profile page */

