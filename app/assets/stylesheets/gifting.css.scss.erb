#carousel {
  /*display: none; */
  width: 722px;
  margin: 0 auto;
  padding-bottom: 5px;
}
.infiniteCarousel {
  width: 723px;
  position: relative;
  height: 240px;
}

.infiniteCarousel .wrapper {
  width: 635px; /* .infiniteCarousel width - (.wrapper margin-left + .wrapper margin-right) */
  overflow: auto;
  min-height: 255px;
  margin: 0 40px;
  position: absolute;
  top: 0;
}
.wrapper {
  overflow: hidden;
  border: 2px solid #6699cc;
  @include rounded-edges(5px);
  
}
.infiniteCarousel ul p {
  border: 5px solid #999;
  @include rounded-edges(5px);
  background: #fff;
  text-align: center;
  height: 200px;
}
.infiniteCarousel ul p:hover {
  cursor: pointer;
}
.infiniteCarousel ul p.selected {
  border: 5px solid rgba(15,235,10, 1);
}

.infiniteCarousel .wrapper ul {
  /*width: 9999px;*/
  list-style-image:none;
  list-style-position:outside;
  list-style-type:none;
  margin:0;
  padding:0;
  position: absolute;
  top: 0;
}

.infiniteCarousel ul li {
  display:block;
  float:left;
  padding: 10px;
  height: 145px;
  width: 139px;
}

.infiniteCarousel ul li img {
  display:block;
  text-align: center;
}
.infiniteCarousel ul li a img {
  border: none;
  text-decoration: none;
  text-align: center;
  margin: auto;
}
.infiniteCarousel ul li a {
  height: 200px;
  text-decoration: none;
}
.infiniteCarousel .arrow {
  display: block;
  height: 36px;
  width: 37px;
  background: url(<%= asset_path 'arrow.png' %>) no-repeat 0 0;
  text-indent: -999px;
  position: absolute;
  top: 37px;
  cursor: pointer;
}

.infiniteCarousel .forward {
  background-position: 0 0;
  right: 0;
}

.infiniteCarousel .back {
  background-position: 0 -72px;
  left: 0;
}

.infiniteCarousel .forward:hover {
  background-position: 0 -36px;
}

.infiniteCarousel .back:hover {
  background-position: 0 -108px;
}

span.carousel_img {
  display: table-cell;
  vertical-align: middle;
  height: 145px;
  width: 128px;
  margin: auto;
  text-align: center;
}
span.carousel_img a img{
  border: none;
  text-decoration: none;
}
#pages p {
  display: none;
  text-align: center;
  font-weight:bold;
  margin-top: 0;
}

#gift_col_one {
  width: 55%;
  margin-left: 25px;
  float: left;
